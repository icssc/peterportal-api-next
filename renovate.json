{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":disableDependencyDashboard",
    ":disableRateLimiting",
    "config:best-practices",
    "group:all",
    "helpers:disableTypesNodeMajor",
    "npm:unpublishSafe",
    "schedule:monthly"
  ],
  "commitMessageAction": ":link: Update",
  "commitMessageTopic": "{{depName}}",
  "ignoreDeps": ["ant-stack"],
  "ignorePaths": ["**/templates/**"],
  "labels": ["no deploy", "type: dependency"],
  "nvm": { "enabled": false },
  "packageRules": [
    {
      "matchPackageNames": ["@mdx-js/react", "clsx", "prism-react-renderer", "prismjs"],
      "allowedVersions": "<2.0.0"
    },
    { "matchPackagePatterns": ["react(?:-router)?"], "allowedVersions": "<18.0.0" },
    { "matchPackageNames": ["ant-stack"], "rangeStrategy": "bump" }
  ],
  "pin": { "commitMessageSuffix": "[skip ci]" },
  "rangeStrategy": "pin"
}
