{
  "pipeline": {
    "pull": {
      "cache": false
    },
    "generate": {
      "dependsOn": ["pull"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^generate"],
      "outputs": ["dist/**"]
    },
    "deploy": {
      "dependsOn": ["^build"],
      "env": [
        "ACCOUNT_ID",
        "API_PORT",
        "AWS_REGION",
        "CERTIFICATE_ARN",
        "DATABASE_URL",
        "HOSTED_ZONE_ID",
        "NODE_ENV",
        "PR_NUM",
        "STAGE"
      ]
    },
    "destroy": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^pull"],
      "env": ["API_PORT"]
    },
    "test": {}
  }
}
