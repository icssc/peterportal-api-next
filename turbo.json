{
  "pipeline": {
    "db:pull": {
      "cache": false
    },
    "db:generate": {
      "dependsOn": ["db:pull"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^db:generate"],
      "outputs": ["dist/**"]
    },
    "deploy": {
      "cache": false,
      "dependsOn": ["^build"],
      "env": [
        "CERTIFICATE_ARN",
        "DATABASE_URL",
        "DEPLOY_API",
        "DEPLOY_DOCS",
        "HOSTED_ZONE_ID",
        "NODE_ENV",
        "PR_NUM"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^db:pull"],
      "env": ["PORT"]
    },
    "test": {}
  }
}
