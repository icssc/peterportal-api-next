{
  "name": "peterportal-api-next",
  "version": "0.0.0",
  "private": true,
  "description": "The official PeterPortal API-Next monorepo",
  "type": "module",
  "scripts": {
    "postinstall": "husky install",
    "build:ant": "dotenv -c development -- ant build",
    "dev:ant": "dotenv -c development -- ant dev",
    "build": "turbo run build",
    "dev": "dotenv -c development -- turbo run dev",
    "deploy": "turbo run deploy",
    "destroy": "turbo run destroy",
    "commit": "cz",
    "lint": "eslint --fix .",
    "format": "prettier --write .",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@libs/db": "workspace:^",
    "@libs/registrar-api": "workspace:*",
    "@libs/websoc-api-next": "workspace:^",
    "@prisma/client": "^4.14.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "ant-stack": "workspace:^",
    "arktype": "1.0.14-alpha",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prisma": "^4.14.0",
    "turbo": "^1.9.9",
    "typescript": "^5.0.4",
    "unconfig": "^0.3.9"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@8.5.0",
  "engines": {
    "pnpm": "^8.0",
    "node": "18"
  }
}
