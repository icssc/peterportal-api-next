{
  "name": "peterportal-api-next",
  "version": "0.0.0",
  "private": true,
  "description": "The official PeterPortal API-Next monorepo",
  "type": "module",
  "scripts": {
    "ant:create": "dotenv -c development -- pnpm exec ant-stack create",
    "ant:dev": "dotenv -c development -- pnpm exec ant-stack dev",
    "build": "turbo run build",
    "commit": "cz",
    "deploy": "turbo run deploy",
    "destroy": "turbo run destroy",
    "dev": "dotenv -c development -- turbo run dev",
    "format": "prettier --write .",
    "postinstall": "husky install",
    "lint": "eslint --fix .",
    "test": "turbo run test"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "consola": "^3.1.0",
    "constructs": "^10.2.69"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@libs/db": "workspace:*",
    "@libs/registrar-api": "workspace:*",
    "@libs/websoc-api-next": "workspace:*",
    "@prisma/client": "^4.14.0",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "ant-stack": "workspace:*",
    "arktype": "1.0.14-alpha",
    "aws-cdk-lib": "^2.87.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-turbo": "^1.9.9",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-packagejson": "^2.4.3",
    "prettier-plugin-prisma": "^4.13.0",
    "prettier-plugin-sql": "^0.14.0",
    "prisma": "^4.14.0",
    "turbo": "^1.9.9",
    "typescript": "^5.0.4"
  },
  "packageManager": "pnpm@8.5.0",
  "engines": {
    "node": "18",
    "pnpm": "^8.0"
  }
}
