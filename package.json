{
  "name": "peterportal-api-next",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "api/**/*",
    "cdk",
    "db",
    "docs",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "dotenv -c production -- turbo run build",
    "deploy": "dotenv -c production -- turbo run deploy",
    "dev": "dotenv -c development -- turbo run dev",
    "format": "prettier --write .",
    "lint": "eslint --fix ."
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --quiet --fix",
      "prettier --write"
    ],
    "*.{json,md,prisma,sql,yaml,yml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-turbo": "^0.0.7",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "prettier-plugin-packagejson": "^2.4.0",
    "prettier-plugin-prisma": "^4.8.0",
    "prettier-plugin-sql": "^0.12.1",
    "turbo": "^1.7.0",
    "typescript": "^4.9.4"
  },
  "packageManager": "npm@8.19.3",
  "engines": {
    "node": ">=16.0.0"
  }
}
