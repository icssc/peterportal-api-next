{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2020",
    "composite": false,
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["*.ts", "api/**/*", "apps/api/**/*", "libs/**/*", "tools/**/*", "packages/**/*"],
  "exclude": ["build/", "**/cdk.out/**/*", "dist/", "node_modules/"]
}
