{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["*.ts", "apps/**/*", "libs/**/*", "packages/**/*", "services/**/*", "tools/**/*"],
  "exclude": [
    "**/build/**/*",
    "**/cdk.out/**/*",
    "**/dist/**/*",
    "**/node_modules/**/*",
    "apps/docs/**/*"
  ]
}
