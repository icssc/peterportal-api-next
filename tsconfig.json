{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["*.ts", "api/**/*", "libs/**/*", "apps/**/*", "tools/**/*", "packages/**/*"],
  "exclude": [
    "**/dist/",
    "build/",
    "node_modules/",
    "**/cdk.out/**/*",
    "apps/docs/**/*",
    "**/*.template.ts",
    "api/example/**/*"
  ]
}
